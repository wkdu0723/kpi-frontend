{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": ["typescript"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": "error",
    "quotes": ["warn", "double"],
    "no-tabs": "off",
    "indent": "off"
  },
  "ignorePatterns": ["node_modules/"]
}
